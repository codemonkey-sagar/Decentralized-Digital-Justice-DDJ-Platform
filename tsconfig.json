{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "outDir": "./public/js",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
